<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
<% if false %>
<!--コメントアウト-->
        <% if book.category == nil %>
          <td></td>
        <% else %>
          <% if request.path.include?("users")%>
            <td><%= book.category %></td>
          <% else %>
            <td><%= link_to book.category, search_book_path(keyword: book.category), remote: true %></td>
          <% end %>
        <% end %>
<% end %>
        <% if book.tags == nil %>
          <td></td>
        <% else %>
          <% if request.path.include?("users")%>
            <td><%= book.tags.map(&:name).join(', ') %></td>
          <% else %>
            <% book.tags.each do |tag| %>
              <td><%= link_to tag.name, search_book_path(tag_id: tag.id) %></td>
            <% end %>
          <% end %>
        <% end %>
        <td class="favorite_btn_<%= book.id %>">
          <%= render 'favorites/favorite_btn', book: book %>
        </td>
        <td>コメント数: <%= book.book_comments.count %></td>
        <td><%= render 'books/book_rate', book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>