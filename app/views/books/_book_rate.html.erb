<div id="star-rate_<%= book.id %>" class="form-group"></div>
<script>
  $(document).on('turbolinks:load', function() {
  $('#star-rate_<%= book.id %>').empty();
  $('#star-rate_<%= book.id %>').raty({
    size      : 20,
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: <%= book.rate %>,
    });
  })
</script>